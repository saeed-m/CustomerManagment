<Window x:Class="CustomerManagment.WpfApp.CustomerRequestsPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Customer Requests" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="3" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="👤" FontSize="32" Margin="0,0,15,0"/>

                <StackPanel Grid.Column="1">
                    <TextBlock x:Name="txtCustomerName" 
                               FontSize="20" FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="txtCustomerEmail" 
                               FontSize="14" 
                               Foreground="White" Opacity="0.9"/>
                </StackPanel>

                <StackPanel Grid.Column="2" HorizontalAlignment="Right">
                    <TextBlock Text="Total Requests:" 
                               FontSize="14" 
                               Foreground="White" Opacity="0.9"/>
                    <TextBlock x:Name="txtTotalRequestsCount" 
                               FontSize="24" FontWeight="Bold" 
                               Foreground="White" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Requests List -->
        <Border Grid.Row="1" Background="#252526" Padding="10" CornerRadius="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" 
                            Margin="0,0,0,10">
                    <TextBlock Text="Customer Requests" 
                               FontSize="16" FontWeight="Bold"/>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <CheckBox x:Name="chkShowOnlyPending" 
                                  Content="Show Only Pending" 
                                  Margin="0,0,10,0" 
                                  VerticalAlignment="Center"
                                  Foreground="White"
                                  Checked="FilterRequests" Unchecked="FilterRequests"/>

                        <Button x:Name="btnAddRequest" 
                                Content="+ Add New Request" 
                                Click="BtnAddRequest_Click" 
                                Padding="10,5"
                                Background="#4CAF50" 
                                Foreground="White"/>
                    </StackPanel>
                </StackPanel>

                <!-- DataGrid Area -->
                <Grid Grid.Row="1">
                    <DataGrid x:Name="dgRequests" 
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              SelectionMode="Single"
                              SelectionUnit="FullRow"
                              ItemsSource="{Binding Requests}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                            <DataGridTextColumn Header="Description" Binding="{Binding Description}" 
                                                Width="*" MinWidth="300"/>
                            <DataGridTextColumn Header="STATUS" Binding="{Binding StatusDisplayName}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="White"/>
                                        <Setter Property="Padding" Value="8,4"/>
                                        
                                        <Setter Property="Background" Value="{Binding StatusColor}"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Created Date" 
                                                Binding="{Binding CreateDateFormatted}" 
                                                Width="150"/>
                            <!-- Actions Column -->
                            <DataGridTemplateColumn Header="ACTIONS" Width="200">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal">
                                            <Button Content="✏️ Change Status" 
                        Click="BtnChangeStatus_Click" 
                        Tag="{Binding Id}"
                        Background="#2196F3" 
                        Foreground="White"
                        Padding="5,2"
                        Margin="2,0"/>

                                            <Button Content="🗑️ Delete" 
                        Click="BtnDeleteRequest_Click" 
                        Tag="{Binding Id}"
                        Background="#F44336" 
                        Foreground="White"
                        Padding="5,2"
                        Margin="2,0"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- No Data Message -->
                    <TextBlock x:Name="txtNoData" 
                               Text="No requests found for this customer." 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center"
                               FontSize="16" 
                               FontStyle="Italic" 
                               Foreground="Gray"
                               Visibility="Collapsed"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border Grid.Row="2" Background="#252526" Padding="15" CornerRadius="3" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <StackPanel>
                    <TextBlock Text="Summary:" FontWeight="Bold"/>
                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                        <TextBlock Text="Total: " FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtSummaryTotal" Margin="5,0,15,0"/>

                        <TextBlock Text="Solved: " FontWeight="SemiBold" Foreground="#4CAF50"/>
                        <TextBlock x:Name="txtSummarySolved" Margin="5,0,15,0" Foreground="#4CAF50"/>

                        <TextBlock Text="Pending: " FontWeight="SemiBold" Foreground="#FF9800"/>
                        <TextBlock x:Name="txtSummaryPending" Margin="5,0,15,0" Foreground="#FF9800"/>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="btnClose" Content="Close" Width="100" 
                        Click="BtnClose_Click" Margin="30,0,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>