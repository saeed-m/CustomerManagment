<Window x:Class="CustomerManagment.WpfApp.AddRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Request" Height="350" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#2D2D30">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="10" CornerRadius="3" Margin="0,0,0,10">
            <TextBlock Text="Add New Request" 
                       FontSize="16" FontWeight="Bold" 
                       Foreground="White" HorizontalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" Background="#252526" Padding="15" CornerRadius="3" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Request Description:" FontWeight="Bold" Foreground="White"/>
                <TextBox x:Name="txtDescription" 
                         Height="100" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,5,0,15"/>

                <!-- Status Selection -->
                <Label Content="Request Status:" FontWeight="Bold" Foreground="White"/>
                <ComboBox x:Name="cbStatus" 
                          SelectedValuePath="Status"
                          Height="35"
                          Margin="0,5,0,10">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding DisplayName}" 
                                       Background="{Binding Color}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       Padding="8,4"
                                       >
                                <TextBlock.ToolTip>
                                    <TextBlock Text="{Binding Description}"/>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" Width="80" 
                    Click="BtnCancel_Click" Margin="0,0,10,0"/>
            <Button x:Name="btnSave" Content="Save Request" Width="100" 
                    Click="BtnSave_Click" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>