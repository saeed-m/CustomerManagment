<Window x:Class="CustomerManagment.WpfApp.AddCustomerPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Customer" Height="700" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="15" CornerRadius="3" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="➕" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Add New Customer" 
                           FontSize="20" FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1" Background="#252526" Padding="20" CornerRadius="3">
            <StackPanel>
                <Label Content="Full Name:"/>
                <TextBox x:Name="txtName" Margin="0,0,0,15"/>

                <Label Content="Email Address:"/>
                <TextBox x:Name="txtEmail" Margin="0,0,0,15"/>

                <Grid Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <Label Content="Mobile Number:"/>
                        <TextBox x:Name="txtMobile"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <Label Content="Phone Number:"/>
                        <TextBox x:Name="txtPhone"/>
                    </StackPanel>
                </Grid>

                <Label Content="Job Title:"/>
                <TextBox x:Name="txtJobTitle" Margin="0,0,0,15"/>

                <Label Content="Address:"/>
                <TextBox x:Name="txtAddress" 
                         Height="80" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="btnCancel" Content="Cancel" Width="100" 
                    Click="BtnCancel_Click" Margin="0,0,10,0"/>

            <Button x:Name="btnSave" Content="Save Customer" Width="120" 
                    Click="BtnSave_Click" Background="#4CAF50" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>