<Window x:Class="CustomerManagment.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Customer Management System" 
        Height="700" Width="1300"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibility"/>

        <!-- Status Colors -->
        <SolidColorBrush x:Key="SolvedColor" Color="#4CAF50"/>
        <SolidColorBrush x:Key="PendingColor" Color="#FF9800"/>
        <SolidColorBrush x:Key="HighPriorityColor" Color="#F44336"/>
        <SolidColorBrush x:Key="PrimaryColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="CardBackground" Color="#252526"/>

        <!-- DataGrid Column Styles -->
        <Style x:Key="RequestsColumnStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="12"/>
            <Style.Triggers>
                <Trigger Property="Text" Value="0 (✓0 ✗0)">
                    <Setter Property="Foreground" Value="#888888"/>
                    <Setter Property="Opacity" Value="0.7"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
        </Style>

        <!-- Statistics Card Style -->
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#252526"/>
            <Setter Property="BorderBrush" Value="#555555"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="3"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="180"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- App Bar -->
        <Border Grid.Row="0" Style="{StaticResource CardStyle}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Icon and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="👥" FontSize="28" Margin="0,0,15,0"/>
                    <TextBlock Text="Customer Management" 
                               FontSize="22" FontWeight="Bold" 
                               VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Search Box -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                            HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBox x:Name="txtSearch" 
                             Width="300" 
                             Margin="0,0,10,0"
                             Text="Search customers...">
                        <TextBox.Style>
                            <Style TargetType="TextBox">
                                <Style.Triggers>
                                    <Trigger Property="IsFocused" Value="True">
                                        <Setter Property="Text" Value=""/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBox.Style>
                    </TextBox>
                    <Button x:Name="btnSearch" 
                            Content="🔍"
                            Width="40"
                            ToolTip="Search"/>
                </StackPanel>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" 
                            HorizontalAlignment="Right" VerticalAlignment="Center">
                    <Button x:Name="btnRefresh" 
                            Content="🔄"
                            Width="40"
                            Click="BtnRefresh_Click"
                            ToolTip="Refresh"
                            Margin="0,0,10,0"/>

                    <Button x:Name="btnAddCustomer" 
                            Content="➕ Add Customer"
                            Click="BtnAddCustomer_Click"
                            Background="{StaticResource PrimaryColor}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Statistics Row -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="TOTAL CUSTOMERS" 
                                   FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding Customers.Count}" 
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="TOTAL REQUESTS" 
                                   FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding TotalRequestsText}" 
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="PENDING REQUESTS" 
                                   FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding PendingRequestsText}" 
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="#FF9800"/>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCardStyle}">
                    <StackPanel>
                        <TextBlock Text="SOLVED REQUESTS" 
                                   FontSize="12" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding SolvedRequestsText}" 
                                   FontSize="28" FontWeight="Bold"
                                   Foreground="#4CAF50"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Customers DataGrid -->
            <Border Grid.Row="1" Style="{StaticResource CardStyle}">
                <DataGrid x:Name="dgCustomers" 
                          ItemsSource="{Binding Customers}"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionUnit="FullRow">
                    <DataGrid.Columns>
                        <!-- ID Column -->
                        <DataGridTextColumn Header="ID" 
                                            Binding="{Binding Id}" 
                                            Width="60"/>

                        <!-- Name Column -->
                        <DataGridTextColumn Header="NAME" 
                                            Binding="{Binding CustomerName}" 
                                            Width="180"/>

                        <!-- Email Column -->
                        <DataGridTextColumn Header="EMAIL" 
                                            Binding="{Binding CustomerEmail}" 
                                            Width="220"/>

                        <!-- Mobile Column -->
                        <DataGridTextColumn Header="MOBILE" 
                                            Binding="{Binding CustomerMobileNumber}" 
                                            Width="120"/>

                        <!-- Job Title Column -->
                        <DataGridTextColumn Header="JOB TITLE" 
                                            Binding="{Binding CustomerJobTitle}" 
                                            Width="150"/>

                        <!-- Requests Column -->
                        <DataGridTextColumn Header="REQUESTS" 
                                            Binding="{Binding RequestsSummary}" 
                                            Width="120"
                                            ElementStyle="{StaticResource RequestsColumnStyle}"/>

                        <!-- Actions Column -->
                        <DataGridTemplateColumn Header="ACTIONS" Width="200">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button Content="Submit Request" 
                                                Click="BtnSubmitRequest_Click" 
                                                Tag="{Binding Id}"
                                                Background="#2196F3" 
                                                Foreground="White"
                                                Padding="8,4"
                                                Margin="0,0,5,0"/>

                                        <Button Content="View Requests" 
                                                Click="BtnViewRequests_Click" 
                                                Tag="{Binding Id}"
                                                Background="#FF9800" 
                                                Foreground="White"
                                                Padding="8,4"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>

                    <!-- Row Details Template -->
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border Background="#252526" 
                                    Padding="15" 
                                    Margin="5"
                                    CornerRadius="3"
                                    BorderBrush="#555555"
                                    BorderThickness="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Customer Details -->
                                    <StackPanel Grid.Column="0" Margin="0,0,30,0" Width="300">
                                        <TextBlock Text="Customer Details" 
                                                   FontSize="16" FontWeight="Bold"
                                                   Margin="0,0,0,10"/>
                                        <StackPanel>
                                            <TextBlock Margin="0,5,0,0">
                                                <Run Text="📞 Phone: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding CustomerPhoneNumber, FallbackValue='N/A'}"/>
                                            </TextBlock>
                                            <TextBlock Margin="0,8,0,0">
                                                <Run Text="💼 Job: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding CustomerJobTitle, FallbackValue='N/A'}"/>
                                            </TextBlock>
                                            <TextBlock Margin="0,8,0,0" TextWrapping="Wrap">
                                                <Run Text="🏠 Address: " FontWeight="SemiBold"/>
                                                <Run Text="{Binding CustomerAddress, FallbackValue='N/A'}"/>
                                            </TextBlock>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Request Statistics -->
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Request Statistics" 
                                                   FontSize="16" FontWeight="Bold"
                                                   Margin="0,0,0,10"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                            <Border Background="#3E3E42" 
                                                    Padding="12" 
                                                    Margin="5" 
                                                    CornerRadius="3"
                                                    Width="120">
                                                <StackPanel>
                                                    <TextBlock Text="TOTAL" 
                                                               FontSize="11" 
                                                               Foreground="#AAAAAA"/>
                                                    <TextBlock Text="{Binding RequestsCount}" 
                                                               FontSize="20" FontWeight="Bold"
                                                               HorizontalAlignment="Center"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#4CAF50" 
                                                    Padding="12" 
                                                    Margin="5" 
                                                    CornerRadius="3"
                                                    Width="120">
                                                <StackPanel>
                                                    <TextBlock Text="SOLVED" 
                                                               FontSize="11" 
                                                               Foreground="White"/>
                                                    <TextBlock Text="{Binding SolvedRequestsCount}" 
                                                               FontSize="20" FontWeight="Bold"
                                                               HorizontalAlignment="Center"
                                                               Foreground="White"/>
                                                </StackPanel>
                                            </Border>

                                            <Border Background="#FF9800" 
                                                    Padding="12" 
                                                    Margin="5" 
                                                    CornerRadius="3"
                                                    Width="120">
                                                <StackPanel>
                                                    <TextBlock Text="PENDING" 
                                                               FontSize="11" 
                                                               Foreground="White"/>
                                                    <TextBlock Text="{Binding PendingRequestsCount}" 
                                                               FontSize="20" FontWeight="Bold"
                                                               HorizontalAlignment="Center"
                                                               Foreground="White"/>
                                                </StackPanel>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                </DataGrid>
            </Border>
        </Grid>
    </Grid>
</Window>