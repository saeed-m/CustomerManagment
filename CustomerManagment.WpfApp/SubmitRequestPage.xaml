<Window x:Class="CustomerManagment.WpfApp.SubmitRequestPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Submit Request" Height="650" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#2D2D30">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#2196F3" Padding="15" CornerRadius="3" Margin="0,0,0,15">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="📝" FontSize="24" Margin="0,0,10,0"/>
                <TextBlock Text="Submit Customer Request" 
                           FontSize="18" FontWeight="Bold" 
                           Foreground="White"/>
            </StackPanel>
        </Border>

        <!-- Customer Info -->
        <Border Grid.Row="1" Background="#252526" Padding="15" CornerRadius="3" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock x:Name="txtCustomerInfo" 
                           FontSize="16" FontWeight="Bold" 
                           Margin="0,0,0,5"/>

                <Border Background="#3E3E42" CornerRadius="3" Padding="10" Margin="0,5,0,0">
                    <StackPanel>
                        <TextBlock Text="Request History" 
                                   FontSize="12" FontWeight="Bold" 
                                   Foreground="#AAAAAA" 
                                   Margin="0,0,0,5"/>
                        <StackPanel Orientation="Horizontal">
                            <Border Background="#555555" CornerRadius="12" Padding="8,4" Margin="0,0,8,0">
                                <TextBlock>
                                    <Run Text="Total: " FontWeight="Bold"/>
                                    <Run x:Name="txtTotalRequests" Text="0"/>
                                </TextBlock>
                            </Border>

                            <Border Background="#4CAF50" CornerRadius="12" Padding="8,4" Margin="0,0,8,0">
                                <TextBlock Foreground="White">
                                    <Run Text="✓ " FontWeight="Bold"/>
                                    <Run x:Name="txtSolvedRequests" Text="0"/>
                                </TextBlock>
                            </Border>

                            <Border Background="#FF9800" CornerRadius="12" Padding="8,4">
                                <TextBlock Foreground="White">
                                    <Run Text="✗ " FontWeight="Bold"/>
                                    <Run x:Name="txtPendingRequests" Text="0"/>
                                </TextBlock>
                            </Border>
                        </StackPanel>

                        <!-- Latest request info -->
                        <TextBlock x:Name="txtLatestRequest" 
                                   FontSize="11" 
                                   Foreground="#AAAAAA" 
                                   TextWrapping="Wrap"
                                   Margin="0,8,0,0"
                                   MaxHeight="40"
                                   TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>

        <!-- Request Form -->
        <Border Grid.Row="2" Background="#252526" Padding="15" CornerRadius="3" Margin="0,0,0,15">
            <StackPanel>
                <Label Content="Request Description:" FontWeight="Bold" Foreground="White"/>
                <TextBox x:Name="txtRequestDescription" 
                         Height="100" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         Margin="0,5,0,15"/>

                <!-- Status Selection -->
                <!-- Status Selection -->
                <StackPanel Margin="0,10,0,0">
                    <Label Content="Request Status:" FontWeight="Bold" Foreground="White"/>
                    <ComboBox x:Name="cbStatus" 
              SelectedValuePath="Status"
              Height="35"
              Margin="0,5,0,10">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding DisplayName}" 
                           Background="{Binding Color}"
                           Foreground="White"
                           FontWeight="SemiBold"
                           Padding="8,4"
                           >
                                    <TextBlock.ToolTip>
                                        <TextBlock Text="{Binding Description}"/>
                                    </TextBlock.ToolTip>
                </TextBlock>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="Cancel" Width="100" 
                    Click="BtnCancel_Click" Margin="0,0,10,0"/>

            <Button x:Name="btnSubmit" Content="Submit Request" Width="120" 
                    Click="BtnSubmit_Click" Background="#2196F3" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>